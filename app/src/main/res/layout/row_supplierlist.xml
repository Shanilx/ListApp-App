<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:backgroundTint="@color/white"
    android:orientation="vertical"
    android:paddingBottom="10dp"
    android:paddingTop="10dp"
    android:weightSum="10">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingRight="10dp"
        android:paddingLeft="10dp"
        android:weightSum="10"
        >


        <ImageView
            android:id="@+id/supicon"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="@dimen/text_30"
            android:src="@drawable/supplier_icon"
            />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="7"
            android:orientation="vertical"
            android:gravity="center_vertical"
            android:paddingRight="10dp"
            android:paddingLeft="@dimen/text_10"
            >

            <TextView
                android:id="@+id/storeName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Indore Medical Store"
                android:textAllCaps="true"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="5dp"
                android:text="Yashwant plaza dawa bazar"
                android:textAllCaps="true"
                android:textColor="@color/dummyTextLightBlack"
                android:textSize="12sp"
                android:textStyle="normal"
                android:visibility="gone" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="start"
            android:orientation="horizontal"
            android:weightSum="1">

            <ImageView
                android:id="@+id/authView"
                android:layout_width="22dp"
                android:layout_height="18dp"
                android:src="@drawable/auth_icon"
                />

            <ImageView
                android:id="@+id/favouriteView"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight=".5"
                android:visibility="gone"
                android:src="@drawable/black_unfavourite" />

        </LinearLayout>

        <ImageView
            android:id="@+id/arrow"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/ic_keyboard_arrow_right_black_24dp" />

    </LinearLayout>

    <View
        android:id="@+id/viewLine"
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:layout_marginTop="5dp"
        android:background="@color/dummyTextLightBlack"
        android:visibility="gone" />

</LinearLayout>